#include <stdio.h>
#define PI 3.14159   // define constant PI

int main() {
    float radius, area;

    // Input
    printf("Enter the radius of the circle: ");
    scanf("%f", &radius);

    // Area calculation
    area = PI * radius * radius;

    // Output
    printf("Area of the circle = %.2f\n", area);

    return 0;
}