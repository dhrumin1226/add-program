#include <stdio.h>

int main() {
    float dollar, pound;
    float rate = 0.79; // 1 USD = 0.79 GBP (exchange rate, can be updated)

    // Input amount in dollars
    printf("Enter amount in USD ($): ");
    scanf("%f", &dollar);

    // Convert to pounds
    pound = dollar * rate;

    // Display result
    printf("%.2f USD = %.2f GBP\n", dollar, pound);

    return 0;
}