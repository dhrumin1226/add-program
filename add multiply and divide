#include <stdio.h>

int main() {
    float num1, num2, sum, product, division;

    // Input two numbers
    printf("Enter first number: ");
    scanf("%f", &num1);

    printf("Enter second number: ");
    scanf("%f", &num2);

    // Perform addition
    sum = num1 + num2;

    // Perform multiplication
    product = num1 * num2;

    // Perform division (check for divide by zero)
    if (num2 != 0) {
        division = num1 / num2;
    } else {
        division = 0; // set to 0 if division not possible
    }

    // Display results
    printf("\nResults:\n");
    printf("Sum = %.2f\n", sum);
    printf("Product = %.2f\n", product);
    
    if (num2 != 0)
        printf("Division = %.2f\n", division);
    else
        printf("Division = Not possible (divide by zero)\n");

    return 0;
}